
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/calibri</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="fontFamily">@font/calibri</item>
    </style>

    <style name="AppTheme.NoActionBar1">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="fontFamily">@font/calibri</item>
    </style>

    <style name="DashboardTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/calibri</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar" />

    <!-- set the rounded drawable as background to your bottom sheet -->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/white_rounded_bottom_sheet_bg</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

    // Custom Tab

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@fonts/calibri</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="CustomTab" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/tab_text</item>
    </style>

    // Edit Text

    <style name="EditTextFormStyle" parent="android:Widget.EditText">
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/calibri</item>
        <item name="backgroundTint">#dde6ed</item>

    </style>

    <style name="EditTextClickableStyle" parent="android:Widget.EditText">
        <item name="android:clickable">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:focusable">false</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
        <item name="backgroundTint">#dde6ed</item>
        <item name="android:fontFamily">@font/calibri</item>
    </style>

    // Text View

    <style name="TextViewTitleStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/calibri</item>
        <item name="android:textColor">#3c4852</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="TextViewHeaderStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/calibri</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewSimpleStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/calibri</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewFormStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/calibri</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    // Button

    <style name="ButtonActionStyle" parent="android:Widget.Button">
        <item name="android:background">@drawable/blue_rounded_bg</item>
        <item name="android:fontFamily">@font/calibri</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:foreground">?selectableItemBackgroundBorderless</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonActionCancelStyle" parent="android:Widget.Button">
        <item name="android:background">@drawable/white_bg_gray_border</item>
        <item name="android:fontFamily">@font/calibri</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:foreground">?selectableItemBackgroundBorderless</item>
        <item name="android:textColor">@color/black</item>
    </style>


</resources>